script an/hien 1 than phan co id=["div1", "div2", "div3"]
        function toggleDivs() {
            // Mảng chứa các ID của các div
            var divIds = ["div1", "div2", "div3"];
            divIds.forEach(function(id) {
                var div = document.getElementById(id);
                // Kiểm tra thuộc tính display của từng div
                if (div.style.display === "none" || div.style.display === "") {
                    div.style.display = "block"; // Hiện div
                } else {
                    div.style.display = "none";  // Ẩn div
                }
            });
        }

